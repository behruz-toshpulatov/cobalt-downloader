{
  "name": "cobalt",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "node ./scripts/dev.js",
    "dev:backend": "ts-node-dev --respawn --transpile-only --project backend/tsconfig.json backend/src/main.ts",
    "dev:frontend": "next dev frontend --port 3000",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.build.json",
    "build:frontend": "next build frontend",
    "start:backend": "node backend/dist/main.js",
    "start:frontend": "next start frontend --port 3000"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
